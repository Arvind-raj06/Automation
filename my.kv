<MainWindow>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'hi1.jpg'
    FloatLayout:
        Label:
            pos_hint:{"center_x": 0.5, "top":0.98}
            size_hint:0.1, 0.1
            text: "Automata Simulation "
            font_size: 42
        
        Label:
            pos_hint:{"center_x": 0.5, "top":0.8}
            size_hint:0.1,0.15
            text: "This is a simple Automata simulation software and this is user friendly.\nIt works fine you can use it and check how it works!!! "
            font_size: 20
        
        Button:
            pos_hint:{"x":0.1,"y":0.5}
            size_hint: 0.3, 0.1
            font_size: 20
            background_normal: 'OIPr.png'
            background_down: 'OIPy.png'
            text: "Turing Machine"
            on_release:
                root.manager.transition.direction = "up"
                root.tur()
                
        Button:
            pos_hint:{"x":0.6,"y":0.5}
            size_hint: 0.3, 0.1
            font_size: 20
            background_normal: 'OIPb.png'
            background_down: 'OIPy.png'
            text: "Finite Automata"
            on_release:
                root.manager.transition.direction = "right"
                root.auto()
        Button:
            pos_hint:{"x":0.1,"y":0.3}
            size_hint: 0.3, 0.1
            font_size: 20
            background_normal: 'OIPb.png'
            background_down: 'OIPy.png'
            text: "Regular Expression"
            on_release:
                root.manager.transition.direction = "down"
                root.reg()
        Button:
            pos_hint:{"x":0.6,"y":0.3}
            size_hint: 0.3, 0.1
            font_size: 20
            background_normal: 'OIPb.png'
            background_down: 'OIPy.png'
            text: "Pushdown Automata"
            on_release:
                root.manager.transition.direction = "down"
                root.reg()


<AutomataWindow>:
    FloatLayout:
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source: 'hi1.jpg'
        Button:
            pos_hint:{"center_x": 0.9, "top":1.0}
            size_hint: 0.1, 0.12
            
            background_normal: 'home2.jpg'
            background_down: 'home1.png'
            on_release:
                root.manager.transition.direction = "down"
                root.reset()
                
        Label:
            pos_hint:{"center_x": 0.5, "top":0.9}
            size_hint:0.2, 0.1
            text: "Automata Simulation "
            font_size: 35

        
        Button:
            pos_hint:{"x":0.1,"y":0.5}
            size_hint: 0.35, 0.1
            font_size: 15
            background_normal: 'OIPr.png'
            background_down: 'OIPy.png'
            text: "Deterministic Finite Automata"
            on_release:
                root.manager.transition.direction = "up"
                root.dfa()
                
        Button:
            pos_hint:{"x":0.6,"y":0.5}
            size_hint: 0.39, 0.1
            font_size: 15
            background_normal: 'OIPr.png'
            background_down: 'OIPy.png'
            text: "Non Deterministic Finite Automata"
            on_release:
                root.manager.transition.direction = "right"
                root.nfa()


