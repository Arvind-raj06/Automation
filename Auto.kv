<CommonFA>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'res5.jpg'
    txt1:txt1
    txt2:txt2
    FloatLayout:
        Label:
            text: "Work Out"
            pos_hint:{"center_x": 0.5, "top":0.95}
            size_hint:0.1, 0.1
            font_size: 35
        Label:
            text: "Condition goes here"
            pos_hint:{"top":0.8,"x":0.05}
            size_hint:0.2,0.05
        TextInput:
            id: txt1
            hint_text:"Ex '00', '01'"
            pos_hint:{"top":0.8,"x":0.3}
            size_hint:0.3, 0.05
            on_text: root.process0()
            
        Label:
            text: "String"
            pos_hint:{"top":0.7,"x":0.05}
            size_hint:0.2,0.05
        TextInput:
            id: txt2
            hint_text:"Ex '0000','010101"
            pos_hint:{"top":0.7,"x":0.3}
            size_hint:0.3, 0.05
            on_text: root.process1()
        Button:
            text: "go"
            pos_hint:{"top":0.6,"center_x":0.5}
            size_hint:0.1, 0.075
            background_normal: 'OIPg.png'
            background_down: 'OIPy.png'
            on_release:
                root.display()
            

        
